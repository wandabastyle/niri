// ~/.config/niri/config.kdl
// Generated from your Hyprland config (binds.conf + hyprland.conf)
// KDL syntax cleaned up for niri (focus-ring defaults to on; older niri may not support
// write-to-disk/show-pointer on screenshot binds).
//
// ---------- General look & misc ----------
prefer-no-csd

hotkey-overlay {
	skip-at-startup
}

// Save screenshots here. Set to null to disable file saves.
screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

// Environment variables for spawned apps (adjust to taste)
environment {
	QT_QPA_PLATFORM "wayland"
	LIBVA_DRIVER_NAME "nvidia"
	NVD_BACKEND "direct"
	GTK_THEME "Tokyonight-Dark"
	ELECTRON_OZONE_PLATFORM_HINT "auto"  // or "wayland" to force
	// DISPLAY null // uncomment if you want to drop DISPLAY for Wayland-native apps
}

// Cursor theme/size; also sets XCURSOR_THEME/SIZE for spawned apps
cursor {
	// xcursor-theme "breeze_cursors"
	xcursor-size 24
	// hide-when-typing
	// hide-after-inactive-ms 1000
}

output "eDP-1" {
	scale 1.0
}

// Input behavior
input {
	// Use Super as the Mod key (default on TTY)
	mod-key "Super"

	keyboard {
		xkb {
			layout "de" // uncomment if you want DE layout globally
			// options "compose:ralt,ctrl:nocaps"
		}
		numlock
	}
	touchpad {
		// natural-scroll // comment this out to match Hyprland's natural_scroll=false
		tap
	}
	// Focus follows mouse, and allow quick workspace back-and-forth by pressing the same number twice
	focus-follows-mouse max-scroll-amount="0%"
	workspace-auto-back-and-forth
}

// Gaps & ring; tweak to taste
layout {
	gaps 2
	focus-ring {
		width 1
		active-color "#bb9af7cc"
		inactive-color "#565f89aa"
	}
	preset-column-widths {
		// quarters
		proportion 0.25
		proportion 0.50
		proportion 0.75
		//defaults
		proportion 0.33333
		proportion 0.66667
	}
}

gestures {
	hot-corners { 
		off 
	}
}

// Persistent workspaces
workspace ""     // home
workspace ""     // browser (firefox)
workspace ""     // twitch/streaming
workspace ""     // discord/chat

// ---------- Autostart ----------
// Matches your Hyprland exec-once as closely as possible
// spawn-at-startup "/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1"
//spawn-at-startup "waybar"
//spawn-at-startup "wpaperd"
spawn-sh-at-startup "qs -c ~/.config/quickshell/noctalia-shell/"
// spawn-at-startup "emacs" "--daemon"
// hypridle works with any wlroots compositor that supports idle; keep if you use it
// spawn-at-startup "hypridle"

// ---------- Binds ----------
// Map Hyprland binds to niri actions.
binds {
	// --- Session / Lock / Quit ---
	Mod+Shift+Q { spawn "qs" "-c" "noctalia-shell" "ipc" "call" "sessionMenu" "toggle"; }
	Mod+Shift+L { spawn "qs" "-c" "noctalia-shell" "ipc" "call" "lockScreen" "lock"; }
	// Mod+Shift+L { spawn "hyprlock"; }  // keep as in Hyprland
	Mod+Shift+E { quit; }

	// --- Apps (Hypr $terminal / $fileManager / $menu) ---
	// Change these if you prefer different apps
	Mod+Return	{ spawn "ghostty"; }            // $terminal
	Mod+M				{ spawn "pcmanfm"; }              // $fileManager
	Mod+Space		{ spawn "rofi" "-modi" "combi" "-show" "combi" "-combi-modi" "drun,run" "-show-icons"; }  // $menu
	Mod+B				{ spawn "qutebrowser"; }
	XF86LaunchA { show-hotkey-overlay; }

	// --- Window management ---
	Mod+Shift+C { close-window; }                // killactive
	Mod+V       { toggle-window-floating; }      // togglefloating
	XF86Search  { fullscreen-window; }           // your Hypr fullscreen key

	// --- Focus & move (HJKL + arrows) ---
	Mod+Left  { focus-column-left; }
	Mod+Right { focus-column-right; }
	Mod+Down  { focus-window-down; }
	Mod+Up    { focus-window-up; }

	Mod+Ctrl+Left  { move-column-left; }
	Mod+Ctrl+Right { move-column-right; }
	Mod+Ctrl+Down  { move-window-down; }
	Mod+Ctrl+Up    { move-window-up; }

	Mod+Ctrl+Shift+Left  { move-column-to-monitor-left; }
	Mod+Ctrl+Shift+Right { move-column-to-monitor-right; }
	Mod+Ctrl+Shift+Down  { move-column-to-monitor-down; }
	Mod+Ctrl+Shift+Up    { move-column-to-monitor-up; }

	// --- Workspaces ---
	XF86Explorer { toggle-overview; }
	
	Mod+1 { focus-workspace ""; }
	Mod+2 { focus-workspace ""; }
	Mod+3 { focus-workspace ""; }
	Mod+4 { focus-workspace ""; }
	Mod+5 { focus-workspace 5; }
	Mod+6 { focus-workspace 6; }
	Mod+7 { focus-workspace 7; }
	Mod+8 { focus-workspace 8; }
	Mod+9 { focus-workspace 9; }	

	Mod+Shift+1 { move-column-to-workspace ""; }
	Mod+Shift+2 { move-column-to-workspace ""; }
	Mod+Shift+3 { move-column-to-workspace ""; }
	Mod+Shift+4 { move-column-to-workspace ""; }
	Mod+Shift+5 { move-column-to-workspace "5"; }
	Mod+Shift+6 { move-column-to-workspace "6"; }
	Mod+Shift+7 { move-column-to-workspace "7"; }
	Mod+Shift+8 { move-column-to-workspace "8"; }
	Mod+Shift+9 { move-column-to-workspace "9"; }

	// Hypr: mainMod+scroll switches workspaces
	Mod+WheelScrollDown cooldown-ms=150 { focus-workspace-down; }
	Mod+WheelScrollUp   cooldown-ms=150 { focus-workspace-up; }

	// Up/Down (matches niri defaults)
	Mod+Next { focus-workspace-down; }
	Mod+Prior { focus-workspace-up; }
	Mod+Ctrl+Next { move-column-to-workspace-down; }
	Mod+Ctrl+Prior { move-column-to-workspace-up; }

	// --- Column/Window sizing (rough equivalents) ---
	Mod+Shift+Left   { set-column-width "-10%"; }
	Mod+Shift+Right  { set-column-width "+10%"; }
	Mod+Shift+Down   { set-window-height "-10%"; }
	Mod+Shift+Up     { set-window-height "+10%"; }
	Mod+R            { switch-preset-column-width; }
	Mod+Shift+R      { switch-preset-window-height; }
	Mod+F            { maximize-column; }
	Mod+C            { center-column; }

	// --- Consume / expel (closest to Hypr split juggling) ---
	Mod+Comma  { consume-or-expel-window-left; }
	Mod+Period { consume-or-expel-window-right; }

	// --- Screenshots ---
	// Compatible with older niri: no write-to-disk/show-pointer flags here.
	Mod+Print { screenshot-screen; }								// focused screen
	Alt+Print { screenshot-window; }								// focused window
	Print			{ screenshot show-pointer=false; }    // interactive region
  
	// --- Audio / Brightness / Media ---
	XF86AudioRaiseVolume                 	{ spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "10%+"; }
	XF86AudioLowerVolume                 	{ spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "10%-"; }
	XF86AudioMute allow-when-locked=true 	{ spawn "wpctl" "set-mute"   "@DEFAULT_AUDIO_SINK@" "toggle"; }
	XF86AudioMicMute                     	{ spawn "wpctl" "set-mute"   "@DEFAULT_AUDIO_SOURCE@" "toggle"; }
	XF86AudioPrev									       	{ spawn "playerctl" "previous"; }
	XF86AudioPlay													{ spawn "playerctl" "play-pause"; }
	XF86AudioNext       									{ spawn "playerctl" "next"; }

	XF86MonBrightnessUp   { spawn "brightnessctl" "set" "+5%"; }
	XF86MonBrightnessDown { spawn "brightnessctl" "set" "5%-"; }
}

window-rule {
	match app-id="org.qutebrowser.qutebrowser"
	open-on-workspace ""
	open-maximized true
}

window-rule {
	match title=r#"(?i)twitch"#
	open-on-workspace ""
	default-column-width { proportion 0.75; }
}

window-rule {
	match app-id="com.chatterino.chatterino"
	open-on-workspace ""
	default-column-width { proportion 0.25; }
	open-floating false
}

window-rule {
	match app-id="discord"
	open-on-workspace ""
	open-maximized true
}

